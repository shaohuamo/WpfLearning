<Window x:Class="WpfBookCodeSample.CodeSample.ResourceSample.WpfResourceSample.ResourcesInSeparateFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBookCodeSample.CodeSample.ResourceSample.WpfResourceSample"
        mc:Ignorable="d"
        Title="ResourcesInSeparateFile" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="../../../Resources/XML/ShinyRed.xaml"></ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <TextBox Text="this is textBox"></TextBox>
        <TextBlock Text="this is textBlock"></TextBlock>
        <Slider></Slider>
        <ComboBox></ComboBox>
        <RadioButton></RadioButton>
        <CheckBox></CheckBox>
        <Button Height="50" Content="OK"></Button>
        <ListBox x:Name="listBoxEmployee" SelectionMode="Multiple"></ListBox>
    </StackPanel>
</Window>
