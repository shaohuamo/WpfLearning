<Window x:Class="WpfBookCodeSample.CodeSample.TemplateSample.ControlTemplateSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBookCodeSample.CodeSample.TemplateSample"
        mc:Ignorable="d"
        Title="ControlTemplateSample" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF3466A1" Offset="0.266"/>
            <GradientStop Color="White" Offset="0.996"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
        <TextBox Height="30" Margin="10" BorderBrush="Black"></TextBox>
        <TextBox Style="{DynamicResource RoundCornerTextBoxStyle}" Height="30" Margin="10" BorderBrush="Black"></TextBox>
        <Button Width="130" Height="30" Content="Button" Margin="10"></Button>
    </StackPanel>
</Window>
