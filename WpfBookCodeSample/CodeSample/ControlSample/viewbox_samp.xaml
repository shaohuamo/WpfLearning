<Window x:Class="WpfBookCodeSample.CodeSample.ControlSample.viewbox_samp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBookCodeSample"
        mc:Ignorable="d"
        Title="viewbox_samp" Height="450" Width="800">
    <Grid>
        <!--Button用于对比，Button在Viewbox之外是无法缩放的-->
        <!--<Button Content="Show" Width="120" Height="80" ></Button>-->
        <Viewbox MaxWidth="500" MaxHeight="500" StretchDirection="Both" Stretch="Uniform" Visibility="Visible" Opacity="0">
            <Image Stretch="None">
                <Image.Source>
                    <BitmapImage UriSource="\images\tulip_farm.jpg"/>
                </Image.Source>
            </Image>
        </Viewbox>
    </Grid>
</Window>
