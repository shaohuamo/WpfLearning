<Window x:Class="WpfBookCodeSample.ControlSample.BindingSample.BindingADONETSource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBookCodeSample.ControlSample.BindingSample"
        mc:Ignorable="d"
        Title="BindingADONETSource" Height="356" Width="471"
        WindowStartupLocation="CenterScreen">
    <StackPanel Background="LightBlue">
        <ListView Height="247" x:Name="listView1" Width="376">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60">
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="60">
                    </GridViewColumn>
                    <GridViewColumn Header="Age" DisplayMemberBinding="{Binding Age}" Width="60">
                    </GridViewColumn>
                    <GridViewColumn Header="Sex" DisplayMemberBinding="{Binding Sex}" Width="60">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
