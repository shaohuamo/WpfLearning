<Window x:Class="WpfBookCodeSample.CodeSample.BindingSample.BindingLINQ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BindingLINQ" Height="372" Width="538" WindowStartupLocation="CenterScreen">
    <StackPanel Background="LightBlue">
        <ListView x:Name="listView1" Height="311"  Margin="15">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Path=Id}" Width="100"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}" Width="100"/>
                    <GridViewColumn Header="Age" DisplayMemberBinding="{Binding Path=Age}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
