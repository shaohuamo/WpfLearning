<Window x:Class="WpfBookCodeSample.ControlSample.BindingSample.BindingItemsSource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBookCodeSample.ControlSample.BindingSample"
        mc:Ignorable="d"
        Title="BindingItemsSource" Height="356" Width="471"
        WindowStartupLocation="CenterScreen">
    <StackPanel  x:Name="stackPanel" Background="LightBlue">
        <TextBlock Text="Teacher number:" FontWeight="Bold" Margin="5"/>
        <TextBox x:Name="textTeacherId" Margin="5"/>
        <TextBlock Text="Teacher List:" FontWeight="Bold" Margin="5"/>
        <ListBox x:Name="listBoxTeachers" Height="110" Margin="5">
        </ListBox>
    </StackPanel>
</Window>
